<Window
    x:Class="CCG.Utils.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CCG.Utils"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CCG"
    Width="1600"
    Height="900"
    MinWidth="400"
    MinHeight="300"
    Background="#101010"
    Closing="Window_Closing"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem
                x:Name="MenuItemGame"
                Height="20"
                Header="Game">
                <MenuItem
                    x:Name="MenuItemAddToGame"
                    Click="MenuItemAddToGame_Click"
                    Header="Add to game" />

                <MenuItem
                    x:Name="MenuItemStartServer"
                    Click="MenuItemStartServer_Click"
                    Header="Start server" />

                <Separator />

                <MenuItem
                    x:Name="MenuItemExitGame"
                    Click="MenuItemExitGame_Click"
                    Header="Exit game" />
            </MenuItem>
        </Menu>

        <UserControl x:Name="CCGScene" />
    </DockPanel>
</Window>
